<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head'); %>
</head>
<body class="container">

<main>
  <div class="row">
    <div class="col-sm-8">
      <div class="jumbotron">
        <h1>skateboarding-shop</h1>
        <h6>protecting skate culture</h6>
        <table id="mainTable">
          <thead>
              <th>Nr</th>
              <th><a onclick="sortTable(1)">Name</a></th>
              <th>Image</th>
              <th><a onclick="sortTable(3)">Price</a></th>
              <th>Link</th>
              <th><a onclick="sortTable(5)">Brand</a></th>
          </thead>
          <% itemList.forEach(function(item) { %>
            <tr>
              <td><%= item[0] %></td>
              <td><%= item[1] %></td>
              <td><img src="<%= item[2] %>" alt="itmimg"/></td>
              <td><%= item[3] %></td>
              <td><a href="<%= item[4] %>">View</a></td>
              <td><%= item[5] %></td>
            </tr>
          <% }); %>
        </table>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="well">
        <h3>Filter</h3>
        <input type="text" id="nameInput" onkeyup="nameSearch()" placeholder="Search by name.." title="Type in a name">
        <input type="text" id="maxPriceInput" onkeyup="maxPrice()" placeholder="Maximum price.." title="Enter a price">

      </div>
    </div>
  </div>
</main>

</body>
</html>